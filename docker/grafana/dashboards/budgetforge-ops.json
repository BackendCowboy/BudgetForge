{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "uid": "budgetforge-ops",
  "title": "BudgetForge — Ops Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["budgetforge", "ops"],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "label": "Datasource",
        "current": {},
        "hide": 0,
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Targets up by job",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "sum by (job) (up)",
          "legendFormat": "{{job}}",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "BudgetForge API — CPU (cores)",
      "id": 2,
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "cores", "min": 0 },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"budgetforge-api\"}[1m])",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "BudgetForge API — Memory (RSS)",
      "id": 3,
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "min": 0 },
        "overrides": []
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"budgetforge-api\"}",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "API — Request rate (req/s)",
      "id": 4,
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "fieldConfig": { "defaults": {"unit": "req/s", "min": 0}, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (route) (rate(http_requests_received_total{job=\"budgetforge-api\"}[1m]))",
          "legendFormat": "{{route}}",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "API — Error rate 5xx (%)",
      "id": 5,
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 7 },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100, "thresholds": { "mode": "absolute", "steps": [{"color":"green","value":null},{"color":"yellow","value":1},{"color":"red","value":5}] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "100 * ( sum(rate(http_requests_received_total{job=\"budgetforge-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_received_total{job=\"budgetforge-api\"}[5m])) )",
          "legendFormat": "5xx %",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "API — Latency p95 (ms)",
      "id": 6,
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 7 },
      "fieldConfig": { "defaults": {"unit": "ms", "min": 0}, "overrides": [] },
      "targets": [
        {
          "expr": "1000 * histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"budgetforge-api\"}[5m])))",
          "legendFormat": "p95",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "stat",
      "title": "Postgres — DB size (MiB)",
      "id": 7,
      "gridPos": { "x": 0, "y": 22, "w": 6, "h": 6 },
      "fieldConfig": { "defaults": {"unit":"mbytes", "min": 0}, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal", "textMode": "value", "colorMode": "value"
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"budgetforge\"} / (1024*1024)",
          "legendFormat": "{{datname}}",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "stat",
      "title": "Postgres — Deadlocks (5m)",
      "id": 8,
      "gridPos": { "x": 6, "y": 22, "w": 6, "h": 6 },
      "fieldConfig": { "defaults": {"unit":"short", "min": 0}, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal", "textMode": "value", "colorMode": "value"
      },
      "targets": [
        {
          "expr": "sum(increase(pg_stat_database_deadlocks{datname=\"budgetforge\"}[5m]))",
          "legendFormat": "deadlocks",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "stat",
      "title": "Jenkins — Build failures (15m)",
      "id": 9,
      "gridPos": { "x": 12, "y": 22, "w": 6, "h": 6 },
      "fieldConfig": { "defaults": {"unit":"short", "min": 0}, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal", "textMode": "value", "colorMode": "value"
      },
      "targets": [
        {
          "expr": "sum(increase(jenkins_builds_failed_total[15m]))",
          "legendFormat": "failed (15m)",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Node — CPU total (cores)",
      "id": 10,
      "gridPos": { "x": 18, "y": 22, "w": 6, "h": 6 },
      "fieldConfig": { "defaults": {"unit":"cores", "min": 0}, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(node_cpu_seconds_total{mode!=\"idle\"}[1m]))",
          "legendFormat": "total",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    },

    {
      "type": "stat",
      "title": "Node — Disk free / (GiB)",
      "id": 11,
      "gridPos": { "x": 0, "y": 28, "w": 6, "h": 6 },
      "fieldConfig": {
        "defaults": {
          "unit":"gibytes",
          "thresholds": { "mode":"absolute", "steps":[{"color":"red","value":null},{"color":"yellow","value":5},{"color":"green","value":10}] }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_filesystem_free_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} / 1024^3",
          "legendFormat": "root",
          "refId": "A",
          "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"}
        }
      ]
    }
  ]
}